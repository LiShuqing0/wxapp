<section id="main-content">
    <section class="wrapper">
    	<h3><i class="fa fa-angle-right"></i>资讯列表</h3>
    	<div class="row">
        <div class=" col-md-12 no-padding">
          <div class="col-md-2">
            <%= link_to "创建", new_back_article_path, class: "btn btn-primary btn-info" %>
          </div>
        </div>

    		<div class="col-md-12" style="margin-top: 15px;">
    		  <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
              <!-- <h4><i class="fa fa-angle-right"></i>文章</h4>
              <hr> -->
              <thead>
                <tr>
                  <th>序号</th>
                  <th><!-- <i class="fa fa-bullhorn"> --></i>标题</th>
                  <th class="hidden-phone"><!-- <i class="fa fa-question-circle"></i> -->摘要</th>
                  <th><!-- <i class="fa fa-bookmark"></i> -->是否发布</th>
                  <th><!-- <i class=" fa fa-edit"></i> -->状态</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each_with_index do |article, index| %>
                  <tr>
                   <td><%= show_index(index) %></td>
                    <td><%= article.title %></td>
                    <td><%= article.abstract %></td>
                    <td><%= article.published ? "是" : "否" %></td>
                    <td><%= article.status_name %></td>
                    <td>
                      <%= link_to article_path(article), class: 'btn btn-success btn-xs' do %>
                        <i class="fa fa-check"></i>
                      <% end %>
                      <%= link_to edit_article_path(article), class: "btn btn-primary btn-xs" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to article_path(article), method: :delete, data: { confirm: '确定删除？' }, class: "btn btn-danger btn-xs" do %>
                        <i class="fa fa-trash-o "></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @articles %>
    		</div>
    	</div>

  </section>
</section>