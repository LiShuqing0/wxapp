<%= form_for @article,  validate: true, html: {class: 'form'} do |f| %>
  <div class="modal-body">
    <div class="col-xs-12">

      <div class="form-group">
        <label class="control-label">标题<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>
      </div>

      <div class="form-group">
         <label class="conyrol-label">摘要<span class="required-star">*</span></label>
         <div class="clearfix">
           <%= f.text_field :abstract, class: "col-xs-12" %>
         </div>
      </div>

      <div class="form-group">
        <label class="control-label">主体<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_area :body, class: "ckeditor col-xs-12" %>
        </div>
      </div>

    </div>
  </div>

  <div class="clearfix"></div>
  <div class="">
    <%= f.submit "确定", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
