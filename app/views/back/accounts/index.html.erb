<section id="main-content">
    <section class="wrapper">
    	<h3><i class="fa fa-angle-right"></i>用户列表</h3>
    	<div class="row">
    		<div class="col-md-12">
    		  <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
              <!-- <h4><i class="fa fa-angle-right"></i>文章</h4>
              <hr> -->
              <thead>
                <tr>
                  <th><i class="fa fa-bullhorn"></i>a</th>
                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> b</th>
                  <th><i class="fa fa-bookmark"></i> c</th>
                  <th><i class=" fa fa-edit"></i> d</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @accounts.each_with_index do |account, index| %>
                  <tr>
                    <td><%= show_index(index) %></td>
                    <td><%= account.nickname %></td>
                    <td><%= account.status %></td>
                    <td><%=  %></td>
                    <td><%=  %></td>
                    <td>
                      <%#= link_to article_path(article), class: 'btn btn-success btn-xs' do %>
                        <!-- <i class="fa fa-check"></i> -->
                      <%# end %>
                      <%= link_to edit_back_account_path(account), class: "btn btn-primary btn-xs" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to back_account_path(account), method: :delete, data: { confirm: '确定删除？' }, class: "btn btn-danger btn-xs" do %>
                        <i class="fa fa-trash-o "></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @accounts %>
    		</div>
    	</div>

  </section>
</section>